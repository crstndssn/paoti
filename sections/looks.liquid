<div class="swiper carousel-looks">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div
        class="swiper-slide container mx-auto py-10 w-full"
        style="background: {{ block.settings.background__color }}"
      >
        <h2 class="text-center pb-7 text-2xl">{{ section.settings.section__title }}</h2>
        {% comment %} DESKTOP {% endcomment %}
        <div class="hidden md:grid md:grid-cols-4 justify-center gap-6 px-20">
          <div class="col-span-1 flex justify-start items-start flex-col">
            <div class="w-full bg-white h-fit p-4 pb-0">
              {% render 'product-block', product: block.settings.first__product %}
            </div>

            <div class="w-full flex justify-center items-center flex-col mt-5">
              <a class="bg-black text-white px-8 py-3 mb-2" href="#">Shop the look</a>
              <a class="decoration-black text-black underline" href="#">Discover lookbook</a>
            </div>
          </div>

          <div class="col-span-2">
            <img class="w-full" src="{{ block.settings.look__image | img_url: 'master' }}">
          </div>

          <div class="col-span-1 flex items-end">
            <div class="w-full bg-white h-fit p-4 pb-0">
              {% render 'product-block', product: block.settings.second__product %}
            </div>
          </div>
        </div>

        {% comment %} MOBILE {% endcomment %}
        <div class="">
          <img class="w-full" src="{{ block.settings.look__image | img_url: 'master' }}">
          <div class="">
            <div class="flex p-2">
              <div class="w-full bg-white h-fit p-2 md:p-4 mr-1 md:mr-0 pb-0">
                {% render 'paoti-card', product: block.settings.first__product %}
              </div>
              <div class="w-full bg-white h-fit p-2 md:p-4 ml-1 md:ml-1 pb-0">
                {% render 'paoti-card', product: block.settings.second__product %}
              </div>
            </div>

            <div class="w-full flex justify-center items-center flex-col mt-5">
              <a class="bg-black text-white px-8 py-3 mb-2" href="#">Shop the look</a>
              <a class="decoration-black text-black underline" href="#">Discover lookbook</a>
            </div>
          </div>
        </div>
        {% comment %} end - MOBILE {% endcomment %}
      </div>
    {% endfor %}
  </div>
  <div class="swiper-button-prev text-black"></div>
  <div class="swiper-button-next text-black"></div>
</div>

<script>
  var swiper = new Swiper('.carousel-looks', {
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
</script>

{% schema %}
{
  "name": "Looks",
  "settings": [
    {
      "type": "text",
      "id": "section__title",
      "label": "Section Title",
      "default": "Looks Paoti"
    }
  ],
  "blocks": [
    {
      "type": "look",
      "name": "Add Look",
      "settings": [
        {
          "type": "color",
          "id": "background__color",
          "label": "Background color"
        },
        {
          "type": "image_picker",
          "id": "look__image",
          "label": "Image"
        },
        {
          "type": "product",
          "id": "first__product",
          "label": "First product"
        },
        {
          "type": "product",
          "id": "second__product",
          "label": "Second product"
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  .swiper {
    width: 100%;
    height: 100%;
  }
  .swiper-slide {
    padding-right: 0;
    padding-left: 0;
  }
{% endstyle %}
